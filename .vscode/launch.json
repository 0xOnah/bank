{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Go in Docker",
      "type": "go",
      "debugAdapter": "dlv-dap",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 4000,
      "host": "127.0.0.1",
      "showLog": true,
      "trace": "verbose",
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/app"
        }
      ]
    }
  ]
}
